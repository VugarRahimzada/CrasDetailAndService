@model List<DTOLayer.PricingDTOs>

    <!-- Start common page title  -->
    <div class="ak-height-125 ak-height-lg-80"></div>
    <div class="container">
        <div class="common-page-title">
            <h3 class="page-title">Qiymət Cədvəli</h3>
            <div class="d-flex gap-2 align-items-center">
                <p>Ana Səyfə /</p>
            <a href="~/Pricing/Index">Qiymətlər</a>
            </div>
        </div>
        <div class="primary-color-border"></div>
