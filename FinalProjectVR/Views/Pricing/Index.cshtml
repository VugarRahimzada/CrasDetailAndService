    <!-- End common page title  -->
    <!-- Start Pricing -->
    <div class="ak-height-125 ak-height-lg-80"></div>
    <div class="container">
        <div class="pricing">
        @foreach (var item in Model)
        {
            <div class="pricing-card active" data-aos="fade-up" data-aos-delay="700">
                <div class="pricing-heading">
                    <h3 class="page-title">@item.Title</h3>
                    <h2 class="discount-price">₼@item.Price</h2>
                </div>
                <div class="opation-all">

                    @await Component.InvokeAsync("PricingDescription", new { pricingId = item.Id })
                </div>
