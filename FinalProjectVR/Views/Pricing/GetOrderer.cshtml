@model DTOLayer.OrderDTOs

@{
    ViewData["Title"] = "GetOrderer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="ak-height-125 ak-height-lg-80"></div>
<div class="container">
    <div class="contact-content">
        <div class="ak-height-125 ak-height-lg-80"></div>
        <div class="container">
            <div class="common-page-title">
                <h3 class="page-title">Abonəliyini Sorğula</h3>
                <div class="d-flex gap-2 align-items-center">
                    <p>Ana səhifə /</p>
                    <a href="~/Pricing/Order/">Paket Alışı</a>
                </div>
            </div>
            <div class="primary-color-border"></div>
        </div>
        <div class="ak-height-125 ak-height-lg-80"></div>
        <div class="ak-height-25 ak-height-lg-20"></div>
        <div class="contact-form" data-aos="fade-up" data-aos-delay="750">
            <div>
                <h5 class="mb-3">Dövlət Qeydiyyat Nişanınızı Daxil Edin</h5>
                <p>
                    Nömrənizi Daxil Edərək Aboneliyiniz Olub Olmadıqınl Sorğulayın
                </p>
                <div class="ak-height-45 ak-height-lg-30"></div>
            </div>
            <form asp-controller="Pricing" asp-action="GetOrderer" method="get">
                <div class="from-inputs ">
                    <div class="type_1">
                        <label for="LicensePlate" class="form-label">Qeydiyyat nişanı</label>
             @*            <input type="text" name="LicensePlate" id="LicensePlate"> *@
                        <input type="text" name="LicensePlate" id="LicensePlate" pattern="[0-9]{2}-[A-Z]{2}-[0-9]{3}" title=" XX-XX-XXX" required>
                    </div>
                </div>
                <div class="ak-height-40 ak-height-lg-20"></div>
                <button type="submit" class="common-btn">Sorğula</button>
            </form>
        </div>
        <br />
    </div>
</div>

@if (Model != null)
{
    <br />
    <section class="container">
        <div class="contact-info">
            <div class="right-info">
                <div class="info-card" data-aos="fade-left">
                    <p> Adınız Soyadınız :</p>
                    <div class="d-flex gap-2">
                        <div>
                            <p>@Model.Name @Model.Surname</p>
                        </div>
                    </div>
                </div>
                <div class="info-card" data-aos="fade-left">
                    <p> Dövlət Qeydiiat Nişanı :</p>
                    <div class="d-flex gap-2">
                        <div>
                            <p>@Model.LicensePlate</p>
                        </div>
                    </div>
                </div>
                <div class="info-card" data-aos="fade-left">
                    <p> Abonəliyinizin Bitmə Tarixi :</p>
                    <div class="d-flex gap-2">
                        <div>
                            <p>@Model.Deadline.ToString("dd/MM/yyyy")</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}
