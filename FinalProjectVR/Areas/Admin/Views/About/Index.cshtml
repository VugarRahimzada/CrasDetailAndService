@model List<AboutDTOs>


<title>Haqqımızda</title>

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="table-responsive overflow-hidden">


    @if ((bool)ViewBag.ShowButton)
    {
        <form action="About/Create" method="get">
            <p>
                <button class="btn btn-primary">@DefaultConstantValue.ADD_MESSAGE</button>
            </p>
        </form>
    }

                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Misson</th>
                            <th>Vision</th>
                            <th>History</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Misson</td>
                                <td>@item.Vision</td>
                                <td>@item.History</td>
                                <td>
                                    @if (item.Delete == 0)
                                    {
                                        <span class="badge badge-success">Aktiv</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-warning">Passiv</span>
                                    }
                                </td>
                                <td>
                                    <a href="~/Admin/About/UpdateAbout/@item.Id" class="btn btn-success"><i class="fas fa-edit"></i></a>
                                 
                                    <button class="btn btn-warning delete-button" data-id="@item.Id"><i class="fas fa-trash-alt"></i></button>

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script>
        $(document).ready(function () {
            $(".delete-button").click(function (e) {
                e.preventDefault();

                var itemId = $(this).data("id");
                var itemName = $(this).data("name");

                Swal.fire({
                    title: 'Əminsən?',
                    text: "!",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonText: "Ləğv et",
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Bəli'
                }).then((result) => {
                    if (result.isConfirmed) {
                        $.ajax({
                            method: "POST",
                            url: "/Admin/About/DeleteAbout/",
                            data: {
                                id: itemId
                            },
                            success: function () {
                                Swal.fire({
                                    title: 'Aktivlik Vəziyyəti Dəyişdi!',
                                    text: "'" + itemName + "' Uğurlu",
                                    icon: 'success',
                                    onClose: function () {
                                        location.reload();
                                    }
                                });
                            },
                            error: function () {
                                Swal.fire({
                                    title: 'Xəta!',
                                    text: "Dəyişmə zamanı xəta baş verdi",
                                    icon: 'error'
                                });
                            }
                        });
                    }
                });
            });
        });
    </script>
}
