@model BlogDTOs


@{
    Layout = null;
}

@{
    string trimmedText = Model.Text.Length > 150 ? Model.Text.Substring(0, 150) + "..." : Model.Text;
}

<div class="ak-height-75 ak-height-lg-80"></div>
<section class="container">
    <div class="blog-feature">
        <div class="feature-content" data-aos="fade-right" data-aos-delay="600">
            <p class="data">@Model.CreateTime.ToString("dd.MM.yyyy")</p>
            <h4 class="title">@Model.Title</h4>
            <p class="desp">
                @trimmedText
            </p>
            <a href="~/Blog/BlogDetail/@Model.Id" class="more-btn">Davamını Oxu</a>
        </div>
        <div class="feature-img" data-aos="fade-left" data-aos-delay="600">
            <img src="~/web-cras-three.vercel.app/assets/img/blog-show.jpg" class="ak-bg" alt="...">
        </div>
    </div>
</section>

