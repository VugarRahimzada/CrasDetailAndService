@model CoreLayer.Results.Concrete.DataResult<List<DTOLayer.ContactUsDTOs>>


@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<h1>Contact Us</h1>


<table class="table table-bordered">
    <tr>

        <th>Adı Soyadı</th>
        <th>Email</th>
        <th>Başlıq</th>
        <th>Messaj</th>
        <th>Activlik</th>
    </tr>

    @foreach (var item in Model.Data)
    {
        <tr>
            <td>@item.Name @item.Surname</td>
            <td>@item.Email</td>
            <td>@item.Subject</td>
            <td>@item.Message</td>
            <td>
                @if (item.Delete == 0)
                {
                    <span class="badge badge-success">Aktiv</span>
                }
                else
                {
                    <span class="badge badge-warning">Passiv</span>
                }
            </td>
            <td><a href="~/Admin/ContactUs/UpdateContactUs/@item.Id" class="btn btn-success"><i class="fas fa-edit"></i></a>
            <a href="~/Admin/ContactUs/DeleteContactUs/@item.Id" class="btn btn-warning"><i class="fas fa-trash-alt"></i></a>
            <a class="btn btn-danger btnDelete" data-id="@item.Id" data-name="@item.Name">
                <i class="fas fa-trash"></i>
        </tr>
    }
</table>



@section Scripts {
    <script>
        $(".btnDelete").click(function () {
            var itemId = $(this).data("id");
            var itemName = $(this).data("name");

            Swal.fire({
                title: 'Əminsən?',
                text: "Geri döndərə bilməyəcəksiz!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonText: "Ləğv et",
                cancelButtonColor: '#d33',
                confirmButtonText: 'Bəli '
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        method: "POST",
                        url: "/Admin/ContactUs/HardDeleteContactUs/",
                        data: {
                            id: itemId
                        },
                        success: function () {
                            Swal.fire({
                                title: 'Silindi!',
                                text: "'" + itemName + "' silindi",
                                icon: 'success',
                                onClose: function () {
                                    window.location.reload();
                                }
                            });
                        },
                        error: function () {
                            Swal.fire({
                                title: 'Xəta!',
                                text: "Silinmə zamanı xəta baş verdi",
                                icon: 'error'
                            });
                        }
                    });
                }
            });
        });
    </script>
}